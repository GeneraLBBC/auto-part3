  font-family: $font_sf_regular;
  src: url('~static/fonts/sf/SFUIDisplay-Regular.eot');
  src: local('SF UI Display Regular'), local('SFUIDisplay-Regular'),
          url('~static/fonts/sf/SFUIDisplay-Regular.eot?#iefix') format('embedded-opentype'),
